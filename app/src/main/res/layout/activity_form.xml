<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD YOUR COMPLAINT"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="1200px"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                android:layout_width="900px"
                android:layout_height="150px"
                android:layout_marginTop="120px"
                android:layout_marginLeft="20dp"
                app:boxStrokeWidth="0dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameInput"
                    android:backgroundTint="@color/crayola"
                    android:layout_width="900px"
                    android:layout_height="150px"
                    android:hint="Yout Name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/title"
                android:layout_width="900px"
                android:layout_height="150px"
                android:layout_marginTop="50px"
                android:layout_marginLeft="20dp"
                app:boxStrokeWidth="0dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/titleInput"
                    android:backgroundTint="@color/pale_cerulean"
                    android:layout_width="900px"
                    android:layout_height="150px"
                    android:hint="Your Title Complaint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/detail"
                android:layout_width="900px"
                android:layout_height="250px"
                android:layout_marginTop="50px"
                android:layout_marginLeft="20dp"
                app:boxStrokeWidth="0dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:backgroundTint="@color/piggy_pink"
                    android:id="@+id/detailInput"
                    android:layout_width="900px"
                    android:layout_height="250px"
                    android:hint="Your Detail Complaint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:backgroundTint="@color/young_green"
                android:id="@+id/button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:text="Create"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>